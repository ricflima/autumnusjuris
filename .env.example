# AutumnusJuris - Environment Configuration

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Authentication
VITE_JWT_SECRET=your-super-secret-jwt-key-here
VITE_AUTH_TOKEN_EXPIRY=3600
VITE_REFRESH_TOKEN_EXPIRY=604800

# Database (for backend reference)
DATABASE_URL=postgresql://username:password@localhost:5432/autumnusjuris
DATABASE_POOL_SIZE=10

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_SESSION_PREFIX=autumnusjuris:session:

# Email Service
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@autumnusjuris.com
MAIL_FROM_NAME="AutumnusJuris"

# File Storage
STORAGE_DRIVER=local
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=autumnusjuris-files

# Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@autumnusjuris.com

# DataJud API - CNJ Official Integration
DATAJUD_BASE_URL=https://api-publica.datajud.cnj.jus.br
DATAJUD_API_KEY=your-datajud-api-key-here
DATAJUD_TIMEOUT=30000
DATAJUD_MAX_RETRIES=3
DATAJUD_RATE_LIMIT_MS=1000

# Third-party Integrations (Legacy - deprecated)
TRIBUNAL_API_KEY=your-tribunal-api-key
TRIBUNAL_API_URL=https://api.tribunal.gov.br

# Development/Testing
NODE_ENV=development
VITE_ENABLE_MOCK_API=true
VITE_ENABLE_DEBUG=true
VITE_LOG_LEVEL=debug

# Analytics & Monitoring
VITE_ANALYTICS_ID=your-analytics-id
SENTRY_DSN=your-sentry-dsn

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# Features Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME_SYNC=true